<!DOCTYPE html>
<html lang="en">
<head>
    
    @*
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Datenbank_RPG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Datenbank_RPG.styles.css" asp-append-version="true" />
    *@
</head>
<style>
    body {
        background-color: black;
        color: white;
        font-family: "Retro Computer";
    }

    a {
        font-family: 'Retro Computer';
        color: inherit;
        text-decoration: none;
    }

    .container {
        align-content: center;
        text-align: left;

    }

    .dropDownContainer {
        display: block;
        position: relative;
        padding-left: 18px;
        text-align: left;
        margin-bottom: 12px;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .dropDownSquare {
        position: relative;
        display: inline;
        text-align: left;
        margin-bottom: 2px;
        padding-left: 15px;
        padding-right: 15px;
        transition-duration: 0.2s;
        border-radius: 8px;
    }

    .playerInfoButton {
        border: none;
        color: black;
        font-size: 10px;
        height: 0px;
        width: 0px;
        opacity: 0;
    }

    .genContainer {
        align-content: center;
        text-align: center;
    }

    .selectionContainer {
        align-content: center;
        text-align: center;
        margin: auto;
        width: 50%;
    }

    .selectionContainerMobile {
        align-content: center;
        text-align: center;
        margin: auto;
        width: 50%;
    }

    .title {
        text-align: center;
        display:block;
        font-family: 'Retro Computer';
    }

    .btn {
        color: black;
        padding: 10px;
        border-radius: 5px;
    }

    .btnDesktop {
        display: inline;
        padding: 10px;
        border-radius: 5px;
    }

    .btnContent {
        color: white;
    }

    .btn.unclick {
        color: lightgray;
    }

    .vp {
        color: lightgray;
    }

    a {
        font-family: 'Retro Computer';
        color: inherit;
        text-decoration: none;
    }

    li {
        float: left;
        color: white;
    }

    ul {
        list-style-type: none;
        align-items: center;
    }

    input {
        font-family: 'Retro Computer';
        width: 100%;
        padding: 12px;
        border: 0px;
        background-color: #333333;
        color: white;
        transition-duration: 0.6s;
        text-align: left;
    }

    input:hover {
        font-family: 'Retro Computer';
        width: 100%;
        padding: 12px;
        border: 0px;
        background-color: white;
        color: #333333;
        transition-duration: 0.6s;
    }

    select {
        font-family: 'Retro Computer';
        width: 100%;
        padding: 12px;
        border: 0px;
        background-color: #333333;
        color: white;
        transition-duration: 0.6s;
        text-align: left;
    }

    select:hover {
        background-color: white;
        color: #333333;
    }

    .hoverTooltip {
        display: none;
        transition-duration: 1s;
        color: black;
    }

    .dropDownSquare:hover .hoverTooltip {
        display: inline-block;
        transition-duration: 1s;
        color: white;
    }

    ul {
        align-content: center;
        text-align: center;
    }

    .left, .right {
        float: left;
        width: 20%;
        background-color: black;
    }

    .main {
        float: left;
        width: 60%;
        background-color: black;
        vertical-align: top;
    }

    @@media only screen and (max-width: 1220px) {
      /* For mobile phones: */
      .left, .right {
        width: 0%;
      }

      .main {
        width: 100%;
      }

    } 

    @*Mobile*@
    @@media screen and (min-width: 1380px) {
        .selectionContainerMobile {
            display: none;
        }
    }

    @*Dekstop*@
    @@media screen and (max-width: 1379px) {
        .selectionContainer {
            display: none;
        }
    }

</style>

<head>
    <h2 class="title">Welcome to Idle Traveler!</h2>
    <hr></hr>
</head>
<body>
<div class="left">&nbsp;</div>
    <div class="main">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                @*&copy; 2024 - Datenbank_RPG - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
<div class="right">&nbsp;</div>  
</body>
</html>
