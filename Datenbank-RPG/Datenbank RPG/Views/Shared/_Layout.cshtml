
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    @*
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Datenbank_RPG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Datenbank_RPG.styles.css" asp-append-version="true" />
    *@
</head>
@{
    var route = ViewData["route"] as RouteValueDictionary;
    var bleh = 2;
}
<style>

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 700, 'GRAD' -25, 'opsz' 24
    }

    body {
        background-color: black;
        color: white;
        font-family: 'Trebuchet MS', sans-serif;
    }
    a {
        font-family: 'Retro-Computer';
        color: inherit;
        text-decoration: none;
    }

    .container {
        align-content: center;
        text-align: left;

    }

    .dropDownContainer {
        display: block;
        position: relative;
        padding-left: 18px;
        text-align: left;
        margin-bottom: 12px;
        cursor: pointer;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .dropDownSquare {
        position: relative;
        display: inline;
        text-align: left;
        margin-bottom: 2px;
        padding-left: 15px;
        padding-right: 15px;
        transition-duration: 0.2s;
        border-radius: 8px;
    }

    .playerInfoButton {
        border: none;
        color: black;
        font-size: 10px;
        height: 0px;
        width: 0px;
        opacity: 0;
    }

    .genContainer {
        align-content: center;
        text-align: center;
    }

    .selectionContainer {
        align-content: center;
        text-align: center;
        margin: auto;
        width: 50%;
    }

    .selectionContainerMobile {
        align-content: center;
        text-align: center;
        margin: auto;
        width: 50%;
    }

    .title {
        text-align: center;
        display:block;
        font-family: 'Trebuchet MS', sans-serif;
    }

    .btn {
        color: black;
        padding: 10px;
        border-radius: 5px;
    }

    .btnDesktop {
        display: inline;
        padding: 10px;
        border-radius: 5px;
    }

    .btnContent {
        color: white;
    }

    .btn.unclick {
        color: lightgray;
    }

    .vp {
        color: lightgray;
    }

    a {
        font-family: 'Trebuchet MS', sans-serif;
        color: inherit;
        text-decoration: none;
    }

    li {
        float: left;
        color: white;
    }

    ul {
        list-style-type: none;
        align-items: center;
    }

    input {
        font-family: 'Trebuchet MS', sans-serif;
        width: 100%;
        box-sizing: border-box;
         -webkit-box-sizing:border-box;
         -moz-box-sizing: border-box;
        padding: 12px;
        border: 0px;
        background-color: #333333;
        color: white;
        text-align: left;
    }

    input:hover {
        font-family: 'Trebuchet MS', sans-serif;
        width: 100%;
        box-sizing: border-box;
         -webkit-box-sizing:border-box;
         -moz-box-sizing: border-box;
        padding: 12px;
        border: 0px;
        background-color: white;
        color: #333333;
    }


    .bcList {
        display: block;
        list-style-type: none;
        padding: 0px;
    }

    .bcItem {
        
    }


    select {
        width: 100%;
        padding: 12px;
        border: 0px;
        background-color: #333333;
        color: white;
        text-align: left;
    }

    select:hover {
        background-color: white;
        color: #333333;
    }

    .hoverTooltip {
        display: none;
        transition-duration: 1s;
        color: black;
    }

    .dropDownSquare:hover .hoverTooltip {
        display: inline-block;
        transition-duration: 1s;
        color: white;
    }

    ul {
        align-content: center;
        text-align: center;
    }

    .left, .right {
        float: left;
        width: 20%;
        background-color: black;
    }

    .main {
        float: left;
        width: 60%;
        background-color: black;
        vertical-align: top;
    }
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {  
        opacity: 1;
    }

    .entryBackdrop {
        height: 10vw;
        width: 10vw;
        display: inline-grid;
        padding: 15px;
        margin-bottom: 5px;
        border-color: white;
        border: 5px;
        border-style: solid;
        background-color: black;
    }

    .entryBackdrop:hover {
        background-color: #333333;
    }

    .container {
        align-items: center;
        text-align: center;
    }

    input[type=text] {
        width: 70%;
    }

    input[type=submit] {
        width: 20%;
    }

    @@media only screen and (max-width: 1220px) {
      /* For mobile phones: */
      .entryBackdrop {
          width: 70vw;
          height: 30vh;
      }
    }

    @@media only screen and (max-width: 1220px) {
      /* For mobile phones: */
      .left, .right {
        width: 0%;
      }

      .main {
        width: 100%;
      }

    } 

    @*Mobile*@
    @@media screen and (min-width: 1380px) {
        .selectionContainerMobile {
            display: none;
        }
    }

    @*Dekstop*@
    @@media screen and (max-width: 1379px) {
        .selectionContainer {
            display: none;
        }
    }

</style>

<head>
    
</head>
<body>

<a class="material-symbols-outlined" href="@Url.Action("toggleDarkMode", "Database", new { url = @Context.Request.Path })">light_mode</a>
<h2 class="title">Welcome to Idle Traveler!</h2>
    <div class="selectionContainerMobile">
        <span class="btn"><div class="btnContent">@Html.ActionLink($"Characters", "Index", "Player")</div></span>
        <span class="btn"><div class="btnContent">@Html.ActionLink($"Enemies", "Index", "Enemies")</div></span>
        <span class="btn"><div class="btnContent">@Html.ActionLink($"Inventory", "Index", "Item")</div></span>
        <span class="btn"><div class="btnContent">@Html.ActionLink($"Items / Shop", "Index", "Database")</div></span>
    </div>
    <div class="selectionContainer">
       <div class="btnDesktop">@Html.ActionLink($"Characters", "Index", "Player")</div>
       <div class="btnDesktop">|</div>
       <div class="btnDesktop">@Html.ActionLink($"Enemies", "Index", "Enemies")</div>
       <div class="btnDesktop">|</div>
       <div class="btnDesktop">@Html.ActionLink($"Inventory", "Index", "Item")</div>
       <div class="btnDesktop">|</div>
       <div class="btnDesktop">@Html.ActionLink($"Items / Shop", "Index", "Database")</div>
    </div>
    <hr>
    
<div class="left">&nbsp;</div>
    <div class="main">
        <breadcrumb></breadcrumb>
        <br>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted">
            <div class="container">
                @*&copy; 2024 - Datenbank_RPG - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
<div class="right">&nbsp;</div>  
</body>
</html>
