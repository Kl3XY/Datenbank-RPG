@{
    ViewData["Title"] = "Datenbank Rollenspiel!";
    sql.Item selitem = ViewData["Item"] as sql.Item;
}
<style>
    .item {
        padding-left: 16px;
        margin-bottom: 4px;
    }

</style>

<h2>@selitem.Name (Id: @selitem.Id)</h2>

NAME: @selitem.Name
<br>
TYPE: @selitem.ItemType
<br>
COST: @selitem.Gold
<br>
POWER: @selitem.ItemPower
<br>
<br></br>
<div class="dropDownContainer">
    <div class="dropDownSquare">@Html.ActionLink($"EDIT", "Edit", new { @id = selitem.Id })</div> <br></br>
    <div class="dropDownSquare">@Html.ActionLink($"REMOVE", "Delete", new { @id = selitem.Id })</div> <br></br>
</div>