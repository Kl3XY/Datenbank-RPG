@{
    ViewData["Title"] = "Datenbank Rollenspiel!";
}
<style>
    .square {
        background-color: lightgrey;
        padding-left: 15px;
        transition-duration: 1s;
        color: dimgrey;
    }

    .square:hover {
        background-color: grey;
        transition-duration: 1s;
        color: white;
    }

</style>


@foreach (var player in ViewData["listOfPlayers"] as List<sql.Player>)
{
    <div class="square">
        <p class="">@player.className | @player.Name</p>
    </div>
    <p></p>
}