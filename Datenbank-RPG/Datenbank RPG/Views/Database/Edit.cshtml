@model sql.Item;
@using Datenbank_RPG.Controllers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Create a item";

}

<h2>ITEM CREATION</h2>



@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(m => m.Name) <br />
        @Html.TextBoxFor(m => m.Name, new { @Value = Model.Name})
    </div>
    <div>
        @Html.LabelFor(m => m.ItemPower) <br />
        @Html.TextBoxFor(m => m.ItemPower, new { @Value = Model.ItemPower, type = "number" })
    </div>
    <div>
        @Html.LabelFor(m => m.ItemType)
    </div>
    <select asp-for="ItemType" asp-items="Html.GetEnumSelectList<itemType>()"></select>
    <br />
    <div>
        @Html.LabelFor(m => m.Gold) <br />
        @Html.TextBoxFor(m => m.Gold, new { @Value=Model.Gold, type = "number" })
    </div>
    <Input id="Submit1" type="submit" value="submit"></Input>
}