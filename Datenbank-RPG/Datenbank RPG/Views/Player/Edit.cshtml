@model sql.Player;
@using Datenbank_RPG.Controllers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Create a Player";
    if (Convert.ToBoolean(Context.Session.GetInt32("_DarkMode")))
    {
        Layout = "_Layout";
    }
    else
    {
        Layout = "_Layout_Alt";
    }
}
<h2>Player edit</h2>



@using(Html.BeginForm())
{
    <div>
        @Html.LabelFor(m => m.Name) <br />
        @Html.TextBoxFor(m => m.Name, new {@Value = Model.Name})
    </div>
    <div>
        @Html.LabelFor(m => m.MaxLife) <br />
        @Html.TextBoxFor(m => m.MaxLife, new { type = "number", @Value = Model.MaxLife })
    </div>
    <div>
        @Html.LabelFor(m => m.Defense) <br />
        @Html.TextBoxFor(m => m.Defense, new { type = "number", Value = Model.Defense })
    </div>
    <div>
        @Html.LabelFor(m => m.classId)
    </div>
    <select asp-for="classId" asp-items="Html.GetEnumSelectList<classID>()"></select> <br/>
    <br></br>
    <Input id="Submit1" type="submit" value="submit"></Input>
}