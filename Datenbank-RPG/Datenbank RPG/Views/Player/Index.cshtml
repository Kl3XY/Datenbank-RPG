@{
    ViewData["Title"] = "Datenbank Rollenspiel!";
}
<style>
    body {
        background-color: black;
        color: white;
    }

    a {
        font-family: 'Retro Computer';
        color: inherit;
        text-decoration: none;
    }

    .container {
        align-content: center;
        text-align: center;
    }

    .dropDownContainer {
        display: block;
        position: relative;
        padding-left: 18px;
        margin-bottom: 12px;
        cursor: pointer;
        font-size: 22px;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    .dropDownSquare {
        position: relative;
        display: inline-block;
        margin-bottom: 2px;
        padding-left: 15px;
        padding-right: 15px;
        transition-duration: 0.2s;
        border-radius: 8px;
    }

    .playerInfoButton {
        border: none;
        color: black;
        font-size: 10px;
        height: 0px;
        width: 0px;
        opacity: 0;
    }

</style>

<div class="container">
    <ul>
    @foreach (var player in ViewData["listOfPlayers"] as List<sql.Player>)
    {

        <label class="dropDownContainer">
            <li class="dropDownSquare">@Html.ActionLink($"{@player.className} | {@player.Name} >>", "ShowPlayer", new { @id = @player.Id })</li> <br></br>
        </label>
        <p></p>
    }
    <label class="dropDownContainer">
        <li class="dropDownSquare">@Html.ActionLink($">ADD PLAYER<", "Create", new { @id = 1 })</li> <br></br>
    </label>
    </ul>
</div>



