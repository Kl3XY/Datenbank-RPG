@model sql.Enemy;
@using Datenbank_RPG.Controllers
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Create an enemy";

    if (Convert.ToBoolean(Context.Session.GetInt32("_DarkMode")))
    {
        Layout = "_Layout";
    }
    else
    {
        Layout = "_Layout_Alt";
    }
}
<h2>ENEMY CREATION</h2>



@using(Html.BeginForm())
{
    <div>
        @Html.LabelFor(m => m.Name) <br />
        @Html.TextBoxFor(m => m.Name)
    </div>
    <div>
        @Html.LabelFor(m => m.Life) <br />
        @Html.TextBoxFor(m => m.Life, new { type = "number" })
    </div>
    <div>
        @Html.LabelFor(m => m.type)
    </div>
    <select asp-for="type" asp-items="Html.GetEnumSelectList<enemyType>()"></select> <br/>
    <div>
        @Html.LabelFor(m => m.Defense) <br />
        @Html.TextBoxFor(m => m.Defense, new { type = "number" })
    </div>
    <br>
    <Input id="Submit1" type="submit" value="submit"></Input>
}